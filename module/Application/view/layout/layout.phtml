function getIsActive($view, array $condition)
{
    $viewModel = current($view->viewModel()->getCurrent()->getChildren());
    $script = explode('/', $viewModel->getTemplate());
    foreach ($condition as $key => $cond) {
        if (null !== $cond && $script[$key] != $cond) {
            return '';
        }
    }
    return ' class="active"';
}
